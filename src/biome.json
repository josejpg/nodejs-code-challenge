{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": ["./dist/*", "./node_modules/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
